<div class="max-w-md">
    <div class="text-5xl font-bold my-4">{{ section.settings.title }}</div>
    <div class="text-base md:text-xl my-4 leading-normal">{{ section.settings.subText_title}}</div>
    <div class="my-4">
        {% if section.settings.button_url == blank %}
            {% assign shop_url = shop.secure_url %}
          {% else %}
            {% assign shop_url = section.settings.button_url %}
        {% endif %}
        <a href="{{ shop_url }}" class="px-4 inline py-2 text-base font-medium bg-green-600 rounded-2xl transition-all hover:bg-green-950 hover:text-white">{{ section.settings.button_label }}</a>
    </div>
</div>

{% schema %}
{
    "name": "Template 404",
    "tag": "section",
    "class": "flex items-center justify-center text-center h-screen",
    "settings": [
        {
            "type": "text",
            "id": "title",
            "default": "404",
            "label": "404 Heading Title"
        },
        {
            "type": "text",
            "id": "subText_title",
            "default": "The page that youre looking for is not found",
            "label": "404 Subtext Title"
        },
        {
            "type": "text",
            "id": "button_label",
            "default": "Back to Home",
            "label": "Button label"
        },
        {
            "type": "url",
            "id": "button_url",
            "label": "Button URL"
        }
    ]

}
{% endschema %}